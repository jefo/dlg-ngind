{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["packages/*"],
      "@apps/*": ["apps/*"],
      "@dlg-ngind/bot-persona": ["packages/bot-persona/src"],
      "@dlg-ngind/chat": ["packages/chat/src"],
      "bot-persona": ["packages/bot-persona/src"],
      "chat": ["packages/chat/src"]
    }
  },
  "include": [
    "packages/**/*",
    "apps/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}